rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Função auxiliar para verificar se o usuário está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Função auxiliar para verificar se o usuário é o dono do documento
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Regras para coleção de despesas (expenses)
    match /expenses/{expenseId} {
      // Permitir leitura apenas dos próprios documentos
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Permitir criação apenas se userId corresponde ao usuário autenticado
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

      // Permitir atualização apenas dos próprios documentos
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Permitir exclusão apenas dos próprios documentos
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Regras para coleção de rendas (incomes)
    match /incomes/{incomeId} {
      // Permitir leitura apenas dos próprios documentos
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Permitir criação apenas se userId corresponde ao usuário autenticado
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

      // Permitir atualização apenas dos próprios documentos
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Permitir exclusão apenas dos próprios documentos
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Regras para coleção de dívidas (debts)
    match /debts/{debtId} {
      // Permitir leitura apenas dos próprios documentos
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Permitir criação apenas se userId corresponde ao usuário autenticado
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

      // Permitir atualização apenas dos próprios documentos
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Permitir exclusão apenas dos próprios documentos
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Regras para coleção de usuários (users) - caso precise no futuro
    match /users/{userId} {
      // Permitir leitura apenas do próprio documento
      allow read: if isOwner(userId);

      // Permitir criação apenas do próprio documento
      allow create: if isOwner(userId);

      // Permitir atualização apenas do próprio documento
      allow update: if isOwner(userId);

      // Permitir exclusão apenas do próprio documento
      allow delete: if isOwner(userId);
    }
  }
}
